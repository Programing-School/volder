{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "ENV": true
  },
  "rules": {
    "no-new-wrappers": "off",
    "no-new-object": "off",
    "no-prototype-builtins": "off"
  }
}
